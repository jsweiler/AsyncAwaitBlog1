<Window x:Class="AsyncAwaitBlog1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncAwaitBlog1"
        mc:Ignorable="d"
        Title="Async Await 1" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <Button Content="Access The Web Async" Click="Button_Click" HorizontalAlignment="Left"
                Margin="10"/>
        <Button Content="Access The Web Synchronous" Click="SyncButton_Click" HorizontalAlignment="Left"
                Margin="10"/>
        <TextBox Name="resultsTextBox"
                 Margin="10,0,10,0"
                 TextWrapping="Wrap"
                 ScrollViewer.VerticalScrollBarVisibility="Auto"
                 ScrollViewer.CanContentScroll="True"/>
    </StackPanel>
</Window>
